# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/keepclone

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# File Upload Settings
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,mp3,wav,mp4,mov,avi,webm

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=False
WORKERS=4

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# Cleanup Settings
TEMP_FILE_EXPIRY=86400  # 24 hours in seconds
INACTIVE_USER_EXPIRY=2592000  # 30 days in seconds 